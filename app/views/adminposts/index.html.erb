<h1>Admin Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adminposts.each do |adminpost| %>
      <tr>
        <td><%= adminpost.title %></td>
        <td><%= adminpost.content %></td>
        <td><%= link_to 'Show', adminposts_path(@adminpost) %></td>
        <!-- removed edit path -->
        <td><%= link_to 'Destroy', adminposts_path(:id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

